            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/chocolate"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- buttons -->

    <androidx.appcompat.widget.LinearLayoutCompat
    android:id="@+id/main_BTN_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:gravity="center_horizontal"
    android:layout_margin="@dimen/default_margin">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_BTN_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/arrow_button_left" />

    <View
        android:layout_width="180dp"
        android:layout_height="0dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_BTN_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/arrow_button_right" />


</androidx.appcompat.widget.LinearLayoutCompat>



</RelativeLayout>