    </androidx.appcompat.widget.LinearLayoutCompat>

    <!-- chocolate row 4 -->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/main_chocolate_4_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/matrix_margin"
        android:layout_above="@id/main_chocolate_3_layout">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_chocolate40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/chocolate" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/main_IMG_chocolate41"
            android:layout_width="wrap_content"
